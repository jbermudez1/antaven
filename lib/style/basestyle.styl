@import url('http://fonts.googleapis.com/css?family=Roboto:400,300,700')

@import 'nib'
$baseColor = #58acd1
body, html
	font-family 'Roboto', sans-serif
	margin 0
	padding 0
	height 100%
.quote
	position fixed
	z-index 99
	right -28px
	background-color $baseColor
	transform rotate(-90deg)
	// transform-origin: right top 0;
	padding 1em
	color white
	font-size 1.2em
	font-weight bold
	top 30%
	border solid white 2px
	border-style dashed
#banner
	min-height 80%
	background-image url('../img/banner.png')
	background-size cover
	h1
		color white
		font-size 3.5em
		font-weight 300
		text-align center
		padding-top 2em
		
.banner2
	min-height 100px
	background-image url('../img/banner.png')
	background-size cover
	
#services 
	text-align center

#benefits 
	background-color #f4f4f4

.logoMenu 
	padding-top 1em
	display flex

.menu 
	float right
	color white
	display flex
	justify-content space-between
	padding-left 0
	width 100%
	padding-top 2em
	li 
		list-style none
		font-size 1.2em
		font-weight 300
		width (100% / 5)
		text-align center
		position relative
		&:after
			content ""
			width 100%
			height 1px
			background-color white
			position absolute
			bottom 1.5em
			left 0
		a 
			color white

.sectionTitle 
	font-size 3em
	font-weight 300
	width 100%
	line-height 0.7em
	position relative
	color #293f6e
	text-align center
	// &:after
