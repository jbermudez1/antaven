
@import url('http://fonts.googleapis.com/css?family=Roboto:400,300,700')

@import 'nib'

$baseColor = #58acd1
$darkColor = #293f6e
body, html
	font-family 'Roboto', sans-serif
	margin 0
	padding 0
	height 100%

a:hover
	text-decoration none
.quote
	position fixed
	z-index 99
	right -28px
	background-color $baseColor
	transform rotate(-90deg)
	// transform-origin: right top 0;
	padding 1em
	color white
	font-size 1.2em
	font-weight bold
	top 30%
	border solid white 2px
	border-style dashed
	
#arriba
	background-color #B4B4B4
	text-align right
	padding-top 1em
	.datos
		float right
		color white
		display inline
		list-style none
		ul
		display table
		li
			display table-cell
			padding-left 2em

#banner
	min-height 80%
	background-image url('../img/banner.png')
	background-size cover
	h1
		color white
		font-size 2.5em
		font-weight 300
		text-align center
		padding-top 0.5em
		
.banner2
	min-height 100px
	background-image url('../img/banner.png')
	background-size cover
	
#services 
	text-align center
	background-color #f9f9f9

#key
	ul
		float left
		display inline-block
		padding-top 3em
		text-align center
		li
			list-style none
			display inline-block
			padding-left 1em
			padding-right 1em
			

#benefits 
	background-color #f1f9fd
	text-align center

.logoMenu 
	padding-top 1em
	display flex
	.logo
		text-align center
		width 50%

.menu 
	float right
	color white
	display flex
	justify-content space-between
	padding-left 0
	width 100%
	padding-top 2em
	li 
		list-style none
		font-size 1em
		font-weight 300
		width (100% / 5)
		text-align center
		position relative
		a 
			&:hover
				color yellow
		&:after
			content ""
			width 100%
			height 1px
			background-color white
			position absolute
			bottom 1.5em
			left 0
		a 
			color white

.sectionTitle 
	font-size 3em
	font-weight 300
	width 100%
	line-height 0.7em
	position relative
	color #293f6e
	text-align center
	// &:after
	// 	content "s"
	// 	background-image url('../img/qa-separador2.png')
	// 	width 100%
	// 	position absolute
	span 
		font-size 0.5em
		color $baseColor
#services, #benefits, #key
	padding-top 3em
	padding-bottom 3em
	.servicios
		.title 
			font-size 1em
			font-weight 700
			color #545454
.title
	font-size 3em
	font-weight bold

#aboutus
	padding-top 2em
	padding-bottom 2em
	font-size 1em
	.about
		font-size 1.5em
		
		color #8b8b8b
		.anta
			color #2172c6
	.tit
		color #a7bcd1
		font-size 2em	
		padding-bottom 1em
		padding-top 1em	
	.frase
		text-align center
		font-size 1.8em
		color #2172c6
	.services
		font-size 1.2em
		text-align center
	.cen
		text-align center
		padding-top 1.5em
	.masinfo
		color #2172c6
	.testlab
		font-size 1.3em
	.tit2 
		color #2172c6
		font-size 1.5em	
		padding-bottom 0.5em
		padding-top 0.5em
	.tex
		text-align center
		font-size 1.8em
		color #8b8b8b
	.titulo
		font-size 1.4em
		


.media
	.glyphicon
		font-size 3em
footer
	text-align center
	padding-top 1em
	padding-bottom 0.5em
	a
		color yellow
	img
		width 50%
	.titulo
		font-size 1.4em
	.sm
		ul
		padding-top 1em
		li
			list-style none
			display inline-block
			width 30%
			
	background-color $darkColor
	background-image url('../img/footer.png')
	min-height 20%
	color white
	.view 
		background-color transparent
		border solid 1px white
		padding 0.8em
		display inline-block
		cursor pointer
		color white
		&:hover
			background-color white
			color $darkColor
	
.xsmenu 
	position fixed
	z-index 99
	height 100vh
	background-color red
	width 80%
	background-color $darkColor
	color white
	padding-left 1.5em
	padding-right 1.5em
	padding-top 1.5em
	.botonmenu
		font-size 2em
		text-align right		

@import 'medias'